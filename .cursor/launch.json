{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "python": "${workspaceFolder}\\venv\\Scripts\\python.exe",
      "preLaunchTask": "activateEnv"
    },
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload"],
      "console": "integratedTerminal",
      "python": "${workspaceFolder}\\venv\\Scripts\\python.exe",
      "preLaunchTask": "activateEnv"
    },
    {
      "name": "Python: Debug",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\debug.py",
      "console": "integratedTerminal",
      "python": "${workspaceFolder}\\venv\\Scripts\\python.exe",
      "preLaunchTask": "activateEnv"
    }
  ]
}
