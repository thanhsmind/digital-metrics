{
  "commands": [
    {
      "name": "Khởi động API",
      "command": "uv run uvicorn app.main:app --reload",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug",
      "command": "uv run python debug.py",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Chạy Tests",
      "command": "uv run pytest",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Cài đặt Packages",
      "command": "uv pip install -r requirements.txt",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Kích hoạt Môi trường",
      "command": "powershell -Command \"& { . .\\.venv\\Scripts\\activate; cmd }\"",
      "cwd": "${workspaceFolder}"
    }
  ]
}
